@model web.workplace.Areas.HelpDesk.VM.IssueVM


<div class="row">

    <div class="col-md-2">

    </div>
    <div class="col-md-8">
        @using (Html.BeginForm("Create", "Issue", FormMethod.Post))
        {

            <div class="form-group">
                <label for="@Model.Subject"> Issue * </label>
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", name = "subject" })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
            <div class="form-group">
                <label for="@Model.Description"> Description </label>
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", name = "subject" })
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="@Model.Status"> Status * </label>
                        @Html.DropDownListFor(m => m.CurrentStatus, Model.StatusOptions, new { @class = "form-control", name = "status" })
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label for="@Model.Status"> Team * </label>
                        @Html.DropDownListFor(m => m.TeamAssignedTo, Model.TeamOptions, new { @class = "form-control", name = "team" })
                    </div>
                </div>
            </div>
            @*<div class="form-group">
                <label for="@Model.Subject"> Attachment * </label>
                @Html.TextBoxFor(m => m.CurrentStatus, new { @class = "form-control", name = "subject", type = "file" })
                @Html.ValidationMessageFor(m => m.CurrentStatus)
            </div>*@


            @Html.Partial("~/Areas/HelpDesk/Views/Shared/FileUploader.cshtml")
            
                <input type="submit" name="create" value="Create" class="btn btn-primary btn-lg" />
                <input type="button" name="clear" value="Reset" class="btn btn-default btn-lg" />


        }
    </div>

    <div class="col-md-2">

    </div>
</div>